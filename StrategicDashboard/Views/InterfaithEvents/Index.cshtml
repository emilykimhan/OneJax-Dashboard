@{
    ViewData["Title"] = "Interfaith Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header with back button -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/CommunityEngagement" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ← Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Interfaith Events Tracking</h2>
                </div>
                
                <!-- Interfaith Events Form -->
                <div class="survey-form">
                    <h4 class="mb-4 text-center" style="color:var(--onejax-navy);">How interfaith collaborative during 2025 to 2026</h4>

                    <form>
                        <div class="mb-3">
                            <label for="q1" class="form-label fw-bold">July – September (Q1):</label>
                            <input type="number" id="q1" name="q1" class="form-control" placeholder="Enter number" min="0" />
                        </div>

                        <div class="mb-3">
                            <label for="q2" class="form-label fw-bold">October – December (Q2):</label>
                            <input type="number" id="q2" name="q2" class="form-control" placeholder="Enter number" min="0" />
                        </div>

                        <div class="mb-3">
                            <label for="q3" class="form-label fw-bold">January – March (Q3):</label>
                            <input type="number" id="q3" name="q3" class="form-control" placeholder="Enter number" min="0" />
                        </div>

                        <div class="mb-3">
                            <label for="q4" class="form-label fw-bold">April – June (Q4):</label>
                            <input type="number" id="q4" name="q4" class="form-control" placeholder="Enter number" min="0" />
                        </div>

                        <div class="text-center">
                            <button type="button" class="btn btn-primary px-4" 
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy);">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-secondary {
        border-color: var(--onejax-navy);
        color: var(--onejax-navy);
    }
    
    .btn-outline-secondary:hover {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
        color: white;
    }
    
    .card {
        border: none;
    }

    /* Survey Form Styles */
    .survey-form {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }

    .btn:hover {
        background-color: #1a365d !important;
        border-color: #1a365d !important;
    }
</style>
