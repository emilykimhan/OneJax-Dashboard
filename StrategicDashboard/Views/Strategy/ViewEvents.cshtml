@using System.Linq
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<OneJaxDashboard.Models.Strategy>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "View Events";

    // Prefer Goals provided by the controller (best: comes from a Goals table)
    var goals = ViewBag.Goals as List<SelectListItem>;

    // Fallback: if Goals are missing, build tabs from the events in Model so tabs still appear
    var goalTabs = (goals != null && goals.Any())
        ? goals
        : (Model ?? new List<OneJaxDashboard.Models.Strategy>())
            .Select(e => e.StrategicGoalId)
            .Distinct()
            .OrderBy(id => id)
            .Select(id => new SelectListItem { Value = id.ToString(), Text = $"Goal {id}" })
            .ToList();
}

<!-- OneJax Color Theme (reuse from Add Event for consistency) -->
<style>
    :root {
        --onejax-blue: #0070AD;
        --onejax-teal: #00A3AD;
        --onejax-navy: #102840;
        --onejax-gold: #93d2de;
        --onejax-light: #F7F9FB;
    }

    body {
        background-color: var(--onejax-light);
        font-family: 'Poppins', sans-serif;
        color: var(--onejax-navy);
    }

    h1,
    h2,
    h3,
    h4,
    h5 {
        color: var(--onejax-navy);
        font-weight: 700;
    }

    .card {
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: none;
    }

    .event-card-title {
        font-weight: 600;
        color: var(--onejax-navy);
    }

    .event-card-meta {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .nav-pills {
        border-bottom: none;
    }

    .nav-pills .nav-link {
        color: var(--onejax-navy);
        border-radius: 25px;
        background-color: #fff;
        border: 1px solid transparent;
        transition: all 0.3s ease-in-out;
        padding: 8px 16px;
        margin: 0 4px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    .nav-pills .nav-link.active {
        background-color: var(--onejax-blue);
        color: #fff;
        box-shadow: 0 4px 10px rgba(0, 112, 173, 0.3);
    }

    .nav-pills .nav-link:hover {
        background-color: var(--onejax-teal);
        color: #fff;
        transform: scale(1.02);
    }

    .event-card-title {
        font-weight: 700;
        color: var(--onejax-navy);
        margin: 0;
    }

    .event-card-desc {
        color: #6c757d;
        margin: 0.35rem 0 0.75rem 0;
        line-height: 1.35;
    }

    .event-meta-row {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items: center;
        margin-top: 0.25rem;
    }

    .badge-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 0.28rem 0.65rem;
        border-radius: 999px;
        font-size: 0.78rem;
        font-weight: 600;
        white-space: nowrap;
    }

    /* Goal badge base */
    .badge-goal {
        color: var(--onejax-navy);
        font-weight: 600;
    }

    /* Goal-specific colors (match your legend) */
    .goal-organizational-building {
        background-color: #fbe4d5;
    }

    .goal-identity-value-proposition {
        background-color: #f1d7f5;
    }

    .goal-financial-sustainability {
        background-color: #c9f5d3;
    }

    .goal-community-engagement {
        background-color: #cfe9f6;
    }
    .badge-type { color: #fff; }
    .type-youth { background-color: #a0ce3f; }
    .type-humanitarian { background-color: #ad3385; }
    .type-interfaith { background-color: #8d478a; }
    .type-community { background-color: #b48a78; }

    .event-datetime {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--onejax-blue);
        font-weight: 600;
        font-size: 0.85rem;
        white-space: nowrap;
    }

    .event-datetime-row {
        margin-top: 0.25rem;
        margin-bottom: 0.65rem;
    }

    .event-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        margin-top: 0.25rem;
    }

    .empty-state {
        text-align: center; 
        padding: 3rem 0;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 2.5rem;
        display: block;
        margin-bottom: 0.75rem;
    }
    
</style>

<div class="container my-5">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-uppercase" style="color: var(--onejax-blue);">View Events</h2>
        <p class="text-secondary mb-0">
            Browse all events and manage them by strategic goal. Use the tabs below to filter.
        </p>
    </div>

    <div class="text-center mb-4">
        <a href="/Strategy/Index" class="btn"
            style="background-color: var(--onejax-blue); color: #fff; padding: 10px 22px; border-radius: 25px; font-weight: 600; box-shadow: 0 3px 8px rgba(0,0,0,0.15);">
            <span style="font-size: 1.2rem; margin-right: 6px;"></span> Create Event +
        </a>
    </div>

    <!-- Tabs -->
   <ul class="nav nav-pills justify-content-center mb-4" id="eventTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-events-tab" data-bs-toggle="tab" data-bs-target="#all-events"
                type="button" role="tab">
                All Events
            </button>
        </li>
        
        @if (goalTabs != null && goalTabs.Any())
        {
            foreach (var goal in goalTabs)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="goal-@goal.Value-tab" data-bs-toggle="tab" data-bs-target="#goal-@goal.Value"
                            type="button" role="tab" aria-controls="goal-@goal.Value" aria-selected="false">
                        @goal.Text
                    </button>
                </li>
            }
        }
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="eventTabsContent">
        <!-- All Events -->
        <div class="tab-pane fade show active" id="all-events" role="tabpanel" aria-labelledby="all-events-tab">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <p class="mb-0">No events have been created yet.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var e in Model.OrderByDescending(x => x.Id))
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 p-3">
                                @{
                                    // Goal name for this event
                                    var goalName = goalTabs?.FirstOrDefault(g => g.Value == e.StrategicGoalId.ToString())?.Text;

                                    // Format date as MM/dd/yyyy when possible
                                    var dateDisplay = e.Date;
                                    if (!string.IsNullOrWhiteSpace(e.Date) && DateTime.TryParse(e.Date, out var parsedDate))
                                    {
                                        dateDisplay = parsedDate.ToString("MM/dd/yyyy");
                                    }

                                    // Format time as h:mm AM/PM when possible
                                    var timeDisplay = e.Time;
                                    if (!string.IsNullOrWhiteSpace(e.Time) && DateTime.TryParse(e.Time, out var parsedTime))
                                    {
                                        timeDisplay = parsedTime.ToString("h:mm tt");
                                    }

                                    var showDateTime = !string.IsNullOrWhiteSpace(dateDisplay) || !string.IsNullOrWhiteSpace(timeDisplay);
                                    var typeClass = (e.EventType ?? string.Empty).Trim().ToLowerInvariant();
                                    var goalClass = (goalName ?? string.Empty)
                                        .Trim()
                                        .ToLowerInvariant()
                                        .Replace(" ", "-")
                                        .Replace("/", "-");
                                }

                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="event-card-title mb-0">@e.Name</h5>

                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light border-0" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item text-primary" asp-controller="Strategy"
                                                   asp-action="Edit" asp-route-id="@e.Id">
                                                    Edit
                                                </a>
                                            </li>
                                            <li>
                                                <button type="button" class="dropdown-item text-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteConfirmModal"
                                                        data-event-id="@e.Id">
                                                    Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <p class="event-card-desc">@e.Description</p>

                                @if (showDateTime)
                                {
                                    <div class="event-datetime-row">
                                        <span class="event-datetime">
                                            <i class="bi bi-calendar-event"></i>
                                            @if (!string.IsNullOrWhiteSpace(dateDisplay))
                                            {
                                                <span>@dateDisplay</span>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(timeDisplay))
                                            {
                                                <span>@timeDisplay</span>
                                            }
                                        </span>
                                    </div>
                                }

                                <div class="event-meta-row">
                                    @if (!string.IsNullOrWhiteSpace(goalName))
                                    {
                                        <span class="badge-pill badge-goal goal-@goalClass"><i class="bi bi-bullseye"></i> @goalName</span>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(e.EventType))
                                    {
                                        <span class="badge-pill badge-type type-@typeClass"><i class="bi bi-tag"></i> @e.EventType</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Events by Goal -->
        @if (goalTabs != null && goalTabs.Any())
        {
            foreach (var goal in goalTabs)
            {
                var goalId = int.Parse(goal.Value);
                var eventsForGoal = Model?.Where(e => e.StrategicGoalId == goalId).ToList() ?? new List<OneJaxDashboard.Models.Strategy>();

                <div class="tab-pane fade" id="goal-@goal.Value" role="tabpanel" aria-labelledby="goal-@goal.Value-tab">
                    @if (!eventsForGoal.Any())
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mb-0">No events for this goal yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var e in eventsForGoal.OrderByDescending(x => x.Id))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 p-3">
                                        @{
                                            // Format date as MM/dd/yyyy when possible
                                            var dateDisplay = e.Date;
                                            if (!string.IsNullOrWhiteSpace(e.Date) && DateTime.TryParse(e.Date, out var parsedDate))
                                            {
                                                dateDisplay = parsedDate.ToString("MM/dd/yyyy");
                                            }

                                            // Format time as h:mm AM/PM when possible
                                            var timeDisplay = e.Time;
                                            if (!string.IsNullOrWhiteSpace(e.Time) && DateTime.TryParse(e.Time, out var parsedTime))
                                            {
                                                timeDisplay = parsedTime.ToString("h:mm tt");
                                            }

                                            var showDateTime = !string.IsNullOrWhiteSpace(dateDisplay) || !string.IsNullOrWhiteSpace(timeDisplay);
                                            var typeClass = (e.EventType ?? string.Empty).Trim().ToLowerInvariant();
                                            var goalClass = (goal.Text ?? string.Empty)
                                                .Trim()
                                                .ToLowerInvariant()
                                                .Replace(" ", "-")
                                                .Replace("/", "-");
                                        }

                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="event-card-title mb-0">@e.Name</h5>

                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light border-0" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item text-primary" asp-controller="Strategy"
                                                           asp-action="Edit" asp-route-id="@e.Id">
                                                            Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <button type="button" class="dropdown-item text-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteConfirmModal"
                                                                data-event-id="@e.Id">
                                                            Delete
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <p class="event-card-desc">@e.Description</p>

                                        @if (showDateTime)
                                        {
                                            <div class="event-datetime-row">
                                                <span class="event-datetime">
                                                    <i class="bi bi-calendar-event"></i>
                                                    @if (!string.IsNullOrWhiteSpace(dateDisplay))
                                                    {
                                                        <span>@dateDisplay</span>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(timeDisplay))
                                                    {
                                                        <span>@timeDisplay</span>
                                                    }
                                                </span>
                                            </div>
                                        }

                                        <div class="event-meta-row">
                                            <span class="badge-pill badge-goal goal-@goalClass"><i class="bi bi-bullseye"></i> @goal.Text</span>

                                            @if (!string.IsNullOrWhiteSpace(e.EventType))
                                            {
                                                <span class="badge-pill badge-type type-@typeClass"><i class="bi bi-tag"></i> @e.EventType</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold" id="deleteConfirmLabel">
                    Delete Event?
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">
                    Youâ€™re about to permanently delete this event. This action cannot be undone.
                </p>
                <p class="mb-3">
                    Type <strong>delete</strong> in lowercase to confirm.
                </p>

                <form id="deleteConfirmForm" asp-action="Delete" asp-controller="Strategy" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteEventId" name="id" />

                    <input type="text" id="deleteConfirmInput" class="form-control mb-3"
                        placeholder='Type "delete" to continue' />

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger" id="deleteConfirmButton" disabled>
                            Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var deleteModal = document.getElementById('deleteConfirmModal');
        var input = document.getElementById('deleteConfirmInput');
        var button = document.getElementById('deleteConfirmButton');
        var hiddenId = document.getElementById('deleteEventId');

        if (!deleteModal) return;

        deleteModal.addEventListener('show.bs.modal', function (event) {
            var triggerButton = event.relatedTarget;
            var eventId = triggerButton.getAttribute('data-event-id');

            hiddenId.value = eventId;
            input.value = '';
            button.disabled = true;
        });

        input.addEventListener('input', function () {
            if (input.value === 'delete') {
                button.disabled = false;
            } else {
                button.disabled = true;
            }
        });
    });
</script>