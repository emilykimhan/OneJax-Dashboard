@model OneJaxDashboard.Models.Strategy
@using System.Collections.Generic

@{
    var successMessage = TempData["SuccessMessage"] as string;

    // Safely read FiscalYear if/when the model has it (won't crash if the property doesn't exist yet)
    var fiscalYearValue = "";
    var fyProp = Model?.GetType().GetProperty("FiscalYear");
    if (fyProp != null)
    {
        fiscalYearValue = fyProp.GetValue(Model)?.ToString() ?? "";
    }
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show text-center mt-3" role="alert"
        style="max-width: 600px; margin: 0 auto;">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    // same goals list as Index.cshtml
    var goals = new List<dynamic>
{
new { Id = 1, Name = "Organizational Building" },
new { Id = 2, Name = "Financial Sustainability" },
new { Id = 3, Name = "Identity/Value Proposition" },
new { Id = 4, Name = "Community Engagement" }
};
}

<style>
    :root {
        --onejax-blue: #0070AD;
        --onejax-teal: #00A3AD;
        --onejax-navy: #102840;
        --onejax-gold: #E6B500;
        --onejax-light: #F7F9FB;
    }

    body {
        background-color: var(--onejax-light);
        font-family: 'Poppins', sans-serif;
        color: var(--onejax-navy);
    }

    h1,
    h2,
    h3,
    h4,
    h5 {
        color: var(--onejax-navy);
        font-weight: 700;
    }

    .card {
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: none;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        border: 1px solid #d0d7de;
        padding: 0.7rem 0.9rem;
        background-color: #ffffff;
        box-shadow: 0 1px 0 rgba(16, 40, 64, 0.03);
    }

    .form-control:focus,
    .form-select:focus {
        border-color: rgba(0, 112, 173, 0.55);
        box-shadow: 0 0 0 0.2rem rgba(0, 112, 173, 0.15);
    }

    .form-label {
        font-weight: 700;
        color: var(--onejax-navy);
        letter-spacing: 0.2px;
    }

    .btn-primary {
        background-color: var(--onejax-blue);
        border-color: var(--onejax-blue);
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: var(--onejax-teal);
        border-color: var(--onejax-teal);
        transform: scale(1.02);
    }
</style>

<div class="container my-5">
    <!-- Header (matches other pages) -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-uppercase" style="color: var(--onejax-blue);">
            OneJax Strategic Dashboard
        </h1>
        <p class="text-secondary fs-5">
            Track and manage events by strategic goals
        </p>
    </div>

    <!-- Edit Event Card -->
    <div class="card shadow-lg border-0 rounded-4 mb-5">
        <div class="card-body p-4">
            <h3 class="fw-bold text-uppercase mb-4" style="color: var(--onejax-blue);">
                Edit Event
            </h3>

            <form asp-action="Edit" asp-controller="Strategy" method="post" class="row g-3">
                <input type="hidden" name="id" value="@Model?.Id" />

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Event Name</label>
                    <input type="text" name="eventName" class="form-control" value="@Model?.Name" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Event Type</label>
                    <select name="eventType" class="form-select" required>
                        <option value="" disabled selected="@(string.IsNullOrWhiteSpace(Model?.EventType))">Select Event Type</option>
                        <option value="Youth" selected="@(Model?.EventType == "Youth")">Youth</option>
                        <option value="Humanitarian" selected="@(Model?.EventType == "Humanitarian")">Humanitarian</option>
                        <option value="Interfaith" selected="@(Model?.EventType == "Interfaith")">Interfaith</option>
                        <option value="Community" selected="@(Model?.EventType == "Community")">Community</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Assign to Goal</label>
                    <select name="goalId" class="form-select" required>
                        <option value="">Select a Goal</option>
                        @foreach (var goal in goals)
                        {
                            <option value="@goal.Id" selected="@(goal.Id == Model?.StrategicGoalId)">
                                @goal.Name
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Fiscal Year</label>
                    <select name="fiscalYear" class="form-select" required>
                        <option value="" selected="@(string.IsNullOrWhiteSpace(fiscalYearValue))" disabled>Select Fiscal Year</option>
                        <option value="25/26" selected="@(fiscalYearValue == "25/26")">25/26</option>
                        <option value="26/27" selected="@(fiscalYearValue == "26/27")">26/27</option>
                        <option value="27/28" selected="@(fiscalYearValue == "27/28")">27/28</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Event Date</label>
                    <input type="date" name="eventDate" class="form-control" value="@Model?.Date" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Event Time</label>
                    <input type="time" name="eventTime" class="form-control" value="@Model?.Time" />
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Event Description</label>
                    <textarea name="eventDescription" class="form-control" rows="3"
                        required>@Model?.Description</textarea>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-semibold">Save
                        Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>