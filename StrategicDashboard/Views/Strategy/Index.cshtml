@using Microsoft.AspNetCore.Mvc.Rendering
@model List<Strategy>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var goals = ViewBag.Goals as List<SelectListItem>;
    var goalId = ViewBag.GoalId;
}

<div class="container my-5">
    <div class="card shadow-lg border-0 mb-5">
        <div class="card-body p-4">
            <h3 class="mb-4 text-primary fw-bold">Add a New Event</h3>
            <form asp-action="Add" method="post" class="row g-3">
                <div class="col-md-6">
                    <label for="eventName" class="form-label fw-semibold">Event Name</label>
                    <input type="text" id="eventName" name="eventName" class="form-control"
                           placeholder="Enter event name" required />
                </div>

                <div class="col-md-6">
                    <label for="goalId" class="form-label fw-semibold">Assign to Goal</label>
                    <select id="goalId" name="goalId" class="form-select" required>
                        <option value="">Select a Goal</option>
                        @foreach (var goal in goals)
                        {
                            <option value="@goal.Value">@goal.Text</option>
                        }
                    </select>
                </div>

                <div class="col-12">
                    <label for="eventDescription" class="form-label fw-semibold">Event Description</label>
                    <textarea id="eventDescription" name="eventDescription" class="form-control" rows="3"
                              placeholder="Enter event description..."></textarea>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 fw-semibold">Add Event</button>
                </div>
            </form>
        </div>
    </div>

    <h4 class="fw-bold mb-3 text-secondary">New Events</h4>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var strategy in Model)
            {
                var goalName = goals.FirstOrDefault(g => g.Value == strategy.StrategicGoalId.ToString())?.Text ?? "Unknown";

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 rounded-4">
                        <div class="card-body position-relative p-4">
                            <!-- Three Dots Menu -->
                            <div class="dropdown position-absolute top-0 end-0 m-3">
                                <button class="btn btn-link text-dark p-0" type="button"
                                        id="menuButton-@strategy.Id" data-bs-toggle="dropdown" aria-expanded="false"
                                        style="text-decoration: none; font-size: 1.5rem; line-height: 1;">
                                    &#x22EE;
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3"
                                    aria-labelledby="menuButton-@strategy.Id">
                                    <li>
                                        <a class="dropdown-item text-primary fw-semibold"
                                           data-bs-toggle="collapse" href="#editForm-@strategy.Id">
                                            Edit
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-action="Delete" method="post" class="m-0">
                                            <input type="hidden" name="id" value="@strategy.Id" />
                                            <button type="submit" class="dropdown-item text-danger fw-semibold">
                                                Delete
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>

                            <h5 class="card-title fw-bold text-dark">@strategy.Name</h5>
                            <p class="mb-1 text-muted"><strong>Description:</strong> @strategy.Description</p>
                            <p class="text-muted mb-0"><strong>Goal:</strong> @goalName</p>
                        </div>

                        <!-- Collapsible Edit Form -->
                        <div class="collapse border-top" id="editForm-@strategy.Id">
                            <form asp-action="Edit" method="post" class="p-4 bg-light">
                                <input type="hidden" name="id" value="@strategy.Id" />

                                <div class="mb-3">
                                    <label class="form-label">Event Name</label>
                                    <input type="text" name="eventName" class="form-control"
                                           value="@strategy.Name" required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea name="eventDescription" class="form-control" rows="2">@strategy.Description</textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Assign to Goal</label>
                                    <select name="goalId" class="form-select">
                                        @foreach (var goal in goals)
                                        {
                                            <option value="@goal.Value"
                                                    selected="@(goal.Value == strategy.StrategicGoalId.ToString())">
                                                @goal.Text
                                            </option>
                                        }
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-success w-100 fw-semibold">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-calendar-x fs-1 d-block mb-3"></i>
            <p class="fs-5">No events yet. Add your first event above.</p>
        </div>
    }
</div>