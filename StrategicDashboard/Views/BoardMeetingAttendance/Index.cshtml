@model OneJaxDashboard.Models.BoardMeetingAttendance
@{
    ViewData["Title"] = "Board Meeting Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header with back button -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/OrganizationalBuilding" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Board Meeting Attendance</h2>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                <!-- Board Meeting Attendance Form -->
                <div class="survey-form">
                    <h4 class="mb-4 text-center" style="color:var(--onejax-navy);">Board Meeting Attendance Entry Form</h4>
                    <p class="text-center text-muted mb-4">Goal: Maintain at least 90% attendance at board meetings</p>

                    <form asp-controller="BoardMeetingAttendance" asp-action="Index" method="post" novalidate>
                        
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="MeetingDate" class="form-label fw-bold">
                                    Board Meeting Date:
                                </label>
                                <input asp-for="MeetingDate" type="date" class="form-control" />
                                <span asp-validation-for="MeetingDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="MembersInAttendance" class="form-label fw-bold">
                                    Number of Board Members in Attendance:
                                </label>
                                <input asp-for="MembersInAttendance" type="number" min="0" 
                                       class="form-control" placeholder="Enter count" />
                                <span asp-validation-for="MembersInAttendance" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalBoardMembers" class="form-label fw-bold">
                                    Total Board Members:
                                </label>
                                <input asp-for="TotalBoardMembers" type="number" min="1" 
                                       class="form-control" placeholder="Enter total" />
                                <span asp-validation-for="TotalBoardMembers" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 py-2" 
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy);">
                                Submit Attendance Record
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-secondary {
        border-color: var(--onejax-navy);
        color: var(--onejax-navy);
    }
    
    .btn-outline-secondary:hover {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
        color: white;
    }
    
    .card {
        border: none;
    }

    .survey-form {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }

    .btn:hover {
        background-color: #1a365d !important;
        border-color: #1a365d !important;
    }

    .alert {
        border: none;
        border-radius: 8px;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .stat-card {
        transition: transform 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    .table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .table thead th {
        border: none;
        padding: 1rem;
    }

    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        padding: 0.5rem 1rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
