@model OneJaxDashboard.Models.feeForService_21D
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Fee-for-Service Revenue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header with back button -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/Financial" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Fee-for-Service Revenue Tracking</h2>
                </div>
                
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Launch at least 2 fee-for-service offerings. Track quarterly revenue and workshop details.
                </p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                <!-- Fee-for-Service Form -->
                <div class="survey-form">
                    <h4 class="mb-4 text-center" style="color:var(--onejax-navy);">Workshop & Revenue Entry</h4>

                    <form asp-controller="FeeForService21D" asp-action="Index" method="post" novalidate>
                        
                        <!-- Client and Program Info -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ClientName" class="form-label fw-bold">Client Name:</label>
                                <input asp-for="ClientName" type="text" class="form-control" 
                                       placeholder="Enter client name" />
                                <span asp-validation-for="ClientName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="StrategyId" class="form-label fw-bold">Program Title:</label>
                                <select asp-for="StrategyId" class="form-select" asp-items="ViewBag.Strategies">
                                    <option value="">-- Select Program --</option>
                                </select>
                                <span asp-validation-for="StrategyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Date" class="form-label fw-bold">Date:</label>
                                <input asp-for="Date" type="date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalNumberOfWorkshops" class="form-label fw-bold">
                                    Total Number of Workshops:
                                </label>
                                <input asp-for="TotalNumberOfWorkshops" type="number" min="1" 
                                       class="form-control" placeholder="Enter number of workshops" />
                                <span asp-validation-for="TotalNumberOfWorkshops" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Workshop Details -->
                        <hr class="my-4">
                        <h5 class="mb-3" style="color:var(--onejax-navy);">Workshop Details</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="WorkshopFormat" class="form-label fw-bold">Workshop Format:</label>
                                <select asp-for="WorkshopFormat" class="form-select" id="workshopFormat">
                                    <option value="">-- Select Format --</option>
                                    <option value="In Person">In Person</option>
                                    <option value="Online">Online</option>
                                </select>
                                <span asp-validation-for="WorkshopFormat" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3" id="locationField">
                                <label asp-for="WorkshopLocation" class="form-label fw-bold">
                                    Workshop Location:
                                </label>
                                <input asp-for="WorkshopLocation" type="text" class="form-control" 
                                       placeholder="Enter location (if in person)" />
                                <span asp-validation-for="WorkshopLocation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="WorkshopDate" class="form-label fw-bold">Workshop Date:</label>
                                <input asp-for="WorkshopDate" type="date" class="form-control" />
                                <span asp-validation-for="WorkshopDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EventPartners" class="form-label fw-bold">Event Partner(s):</label>
                                <input asp-for="EventPartners" type="text" class="form-control" 
                                       placeholder="Enter partner names (optional)" />
                                <span asp-validation-for="EventPartners" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="NumberOfAttendees" class="form-label fw-bold">
                                    Number of Attendees:
                                </label>
                                <input asp-for="NumberOfAttendees" type="number" min="1" 
                                       class="form-control" placeholder="Enter attendee count" />
                                <span asp-validation-for="NumberOfAttendees" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ParticipantSatisfactionRating" class="form-label fw-bold">
                                    Participant Satisfaction (%):
                                </label>
                                <input asp-for="ParticipantSatisfactionRating" type="number" min="0" max="100" step="0.1" 
                                       class="form-control" placeholder="0-100" />
                                <span asp-validation-for="ParticipantSatisfactionRating" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="PartnerSatisfactionRating" class="form-label fw-bold">
                                    Partner Satisfaction (%):
                                </label>
                                <input asp-for="PartnerSatisfactionRating" type="number" min="0" max="100" step="0.1" 
                                       class="form-control" placeholder="0-100" />
                                <span asp-validation-for="PartnerSatisfactionRating" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Revenue Info -->
                        <hr class="my-4">
                        <h5 class="mb-3" style="color:var(--onejax-navy);">Revenue Information</h5>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="RevenueReceived" class="form-label fw-bold">Revenue Received:</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="RevenueReceived" type="number" min="0" step="0.01" 
                                           class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="RevenueReceived" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Quarter" class="form-label fw-bold">Quarter:</label>
                                <select asp-for="Quarter" class="form-select" asp-items="ViewBag.Quarters">
                                    <option value="">-- Select Quarter --</option>
                                </select>
                                <span asp-validation-for="Quarter" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Year" class="form-label fw-bold">Year:</label>
                                <input asp-for="Year" type="number" min="2020" max="2100" 
                                       class="form-control" placeholder="e.g., 2025" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 py-2" 
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy);">
                                Submit Fee-for-Service Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-secondary {
        border-color: var(--onejax-navy);
        color: var(--onejax-navy);
    }
    
    .btn-outline-secondary:hover {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
        color: white;
    }
    
    .card {
        border: none;
    }

    .survey-form {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }

    .btn:hover {
        background-color: #1a365d !important;
        border-color: #1a365d !important;
    }

    .alert {
        border: none;
        border-radius: 8px;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    hr {
        border-top: 2px solid #dee2e6;
    }

    .input-group-text {
        background-color: var(--onejax-navy);
        color: white;
        border-color: var(--onejax-navy);
    }
</style>

<script>
    // Show/hide location field based on workshop format
    document.getElementById('workshopFormat').addEventListener('change', function() {
        const locationField = document.getElementById('locationField');
        if (this.value === 'In Person') {
            locationField.style.display = 'block';
        } else {
            locationField.style.display = 'none';
        }
    });

    // Initialize on page load
    window.addEventListener('DOMContentLoaded', function() {
        const format = document.getElementById('workshopFormat').value;
        const locationField = document.getElementById('locationField');
        if (format !== 'In Person') {
            locationField.style.display = 'none';
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
