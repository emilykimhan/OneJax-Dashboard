@model OneJaxDashboard.Models.Event
@{
    ViewData["Title"] = $"{Model.Title} - Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --onejax-navy: #1E3A8A;
        --onejax-blue: #3B82F6;
        --onejax-orange: #F59E0B;
        --onejax-green: #10B981;
        --onejax-white: #FFFFFF;
        --onejax-light-bg: #f8fafc;
        --onejax-border: #e2e8f0;
        --onejax-text: #1e293b;
        --onejax-text-muted: #64748b;
    }
    
    .event-header {
        background: linear-gradient(135deg, var(--onejax-navy), var(--onejax-blue));
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 20px 20px;
    }
    
    .status-badge {
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        backdrop-filter: blur(10px);
    }
    
    .status-planned {
        background: rgba(245, 158, 11, 0.2);
        color: #f59e0b;
        border: 2px solid rgba(245, 158, 11, 0.3);
    }
    
    .status-active {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
        border: 2px solid rgba(16, 185, 129, 0.3);
    }
    
    .status-completed {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
        border: 2px solid rgba(59, 130, 246, 0.3);
    }
    
    .info-card {
        background: var(--onejax-white);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--onejax-border);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }
    
    .info-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }
    
    .back-button {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    
    .back-button:hover {
        background: rgba(255, 255, 255, 0.3);
        color: white;
        text-decoration: none;
        transform: translateX(-4px);
    }
    
    .metric-display {
        text-align: center;
        padding: 1.5rem;
        background: var(--onejax-light-bg);
        border-radius: 12px;
        border: 1px solid var(--onejax-border);
    }
    
    .satisfaction-score {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--onejax-green);
        margin-bottom: 0.5rem;
    }
</style>

<div class="event-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="mb-3">
                    <a href="/" class="back-button">
                        ‚Üê Back to Dashboard
                    </a>
                </div>
                <h1 class="display-5 mb-3" style="font-weight: 700;">@Model.Title</h1>
                <p class="lead mb-3">@Model.Type Event</p>
                <div class="d-flex align-items-center gap-3">
                    <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                    <small style="opacity: 0.8;">@Model.DueDate?.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
            <div class="col-md-4 text-end">
                @if (Model.SatisfactionScore.HasValue && Model.SatisfactionScore > 0)
                {
                    <div class="metric-display" style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2);">
                        <div class="satisfaction-score" style="color: white;">@Model.SatisfactionScore.Value.ToString("0.0")</div>
                        <small style="color: rgba(255,255,255,0.8);">Satisfaction Score</small>
                    </div>
                }
                else if (Model.Attendees > 0)
                {
                    <div class="metric-display" style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.2);">
                        <div class="satisfaction-score" style="color: white;">@Model.Attendees</div>
                        <small style="color: rgba(255,255,255,0.8);">Attendees</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Event Information -->
        <div class="col-lg-8">
            <div class="info-card">
                <h4 style="color: var(--onejax-navy); margin-bottom: 1.5rem;">Event Information</h4>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h6 style="color: var(--onejax-text); font-weight: 600;">Date & Time</h6>
                        <p style="color: var(--onejax-text-muted); margin: 0;">@Model.DueDate?.ToString("dddd, MMMM dd, yyyy")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 style="color: var(--onejax-text); font-weight: 600;">Event Type</h6>
                        <p style="color: var(--onejax-text-muted); margin: 0;">@Model.Type</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 style="color: var(--onejax-text); font-weight: 600;">Location</h6>
                        <p style="color: var(--onejax-text-muted); margin: 0;">@Model.Location</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 style="color: var(--onejax-text); font-weight: 600;">Status</h6>
                        <span class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "Active" ? "bg-primary" : "bg-warning") fs-6">
                            @Model.Status
                        </span>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr style="margin: 2rem 0;">
                    <h6 style="color: var(--onejax-text); font-weight: 600;">Description</h6>
                    <p style="color: var(--onejax-text-muted); line-height: 1.6;">@Model.Notes</p>
                }
            </div>
            
            <!-- Assessment Data -->
            @if (!string.IsNullOrEmpty(Model.PreAssessmentData) || !string.IsNullOrEmpty(Model.PostAssessmentData))
            {
                <div class="info-card">
                    <h4 style="color: var(--onejax-navy); margin-bottom: 1.5rem;">Assessment Information</h4>
                    
                    @if (!string.IsNullOrEmpty(Model.PreAssessmentData))
                    {
                        <div class="mb-3">
                            <h6 style="color: var(--onejax-text); font-weight: 600;">Pre-Assessment</h6>
                            <p style="color: var(--onejax-text-muted); margin: 0;">@Model.PreAssessmentData</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.PostAssessmentData))
                    {
                        <div class="mb-3">
                            <h6 style="color: var(--onejax-text); font-weight: 600;">Post-Assessment</h6>
                            <p style="color: var(--onejax-text-muted); margin: 0;">@Model.PostAssessmentData</p>
                        </div>
                    }
                </div>
            }
        </div>
        
        <!-- Metrics & Statistics -->
        <div class="col-lg-4">
            <div class="info-card">
                <h5 style="color: var(--onejax-navy); margin-bottom: 1.5rem;">Event Metrics</h5>
                
                @if (Model.Attendees > 0)
                {
                    <div class="metric-display mb-3">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--onejax-blue); margin-bottom: 0.5rem;">@Model.Attendees</div>
                        <small style="color: var(--onejax-text-muted);">Total Attendees</small>
                    </div>
                }
                
                @if (Model.SatisfactionScore.HasValue && Model.SatisfactionScore > 0)
                {
                    <div class="metric-display mb-3">
                        <div class="satisfaction-score">@Model.SatisfactionScore.Value.ToString("0.0")</div>
                        <small style="color: var(--onejax-text-muted);">Satisfaction Score (out of 5.0)</small>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @(((double)Model.SatisfactionScore.Value / 5.0) * 100)%"></div>
                        </div>
                    </div>
                }
                
                @if (Model.Status == "Planned")
                {
                    <div style="background: #fef3c7; border: 1px solid #f59e0b; border-radius: 8px; padding: 1rem; margin-top: 1rem;">
                        <h6 style="color: #92400e; margin-bottom: 0.5rem;">üìÖ Upcoming Event</h6>
                        <small style="color: #92400e;">This event is scheduled for @Model.DueDate?.ToString("MMMM dd, yyyy")</small>
                    </div>
                }
                else if (Model.Status == "Active")
                {
                    <div style="background: #d1fae5; border: 1px solid #10b981; border-radius: 8px; padding: 1rem; margin-top: 1rem;">
                        <h6 style="color: #065f46; margin-bottom: 0.5rem;">üü¢ Currently Active</h6>
                        <small style="color: #065f46;">This event is currently in progress</small>
                    </div>
                }
                else if (Model.Status == "Completed")
                {
                    <div style="background: #dbeafe; border: 1px solid #3b82f6; border-radius: 8px; padding: 1rem; margin-top: 1rem;">
                        <h6 style="color: #1e40af; margin-bottom: 0.5rem;">‚úÖ Successfully Completed</h6>
                        <small style="color: #1e40af;">This event was completed on @Model.DueDate?.ToString("MMMM dd, yyyy")</small>
                    </div>
                }
            </div>
            
            <!-- Strategic Goal Link -->
            <div class="info-card">
                <h6 style="color: var(--onejax-navy); margin-bottom: 1rem;">Related Strategic Goal</h6>
                <p style="color: var(--onejax-text-muted); margin-bottom: 1rem;">This event supports strategic goal #@Model.StrategicGoalId</p>
                <a href="/?goal=@(ViewBag.GoalName ?? "Community Engagement")" class="btn btn-outline-primary w-100" style="border-radius: 8px;">
                    View Strategic Goal
                </a>
            </div>
        </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-center gap-3">
                <a href="/" class="btn btn-primary btn-lg" style="border-radius: 12px;">
                    Back to Dashboard
                </a>
                <a href="/Public/Overview" class="btn btn-outline-primary btn-lg" style="border-radius: 12px;">
                    View All Projects
                </a>
            </div>
        </div>
    </div>
</div>

<div style="margin-bottom: 3rem;"></div>
