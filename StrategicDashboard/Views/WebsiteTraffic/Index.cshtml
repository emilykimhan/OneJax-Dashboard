@model OneJaxDashboard.Models.WebsiteTraffic_4D
@{
    ViewData["Title"] = "Website Traffic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                <a href="/Identity" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ← Back
                    </a>
                
                <h2 class="mb-0" style="color:var(--onejax-navy);">Website Traffic</h2>
                </div>
                <p class="mb-4" style="color:var(--onejax-gray);">
                    Track website clicks throughout the year
                </p>
                
                <!-- Question -->
                <div class="alert alert-info mb-4" style="border-radius: 12px; border-left: 4px solid var(--onejax-navy);">
                    <strong>Question:</strong> How many clicks did the OneJax website obtain?
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                <!-- Quarterly Input Form -->
                <form asp-controller="WebsiteTraffic" asp-action="Index" method="post">
                    <div class="row">
                        <!-- Q1: July - September -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Q1_JulySeptember" class="form-label fw-bold">July – September (Q1):</label>
                            <input asp-for="Q1_JulySeptember" type="number" class="form-control" placeholder="Enter number of clicks" min="0" />
                            <span asp-validation-for="Q1_JulySeptember" class="text-danger"></span>
                        </div>
                        
                        <!-- Q2: October - December -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Q2_OctoberDecember" class="form-label fw-bold">October – December (Q2):</label>
                            <input asp-for="Q2_OctoberDecember" type="number" class="form-control" placeholder="Enter number of clicks" min="0" />
                            <span asp-validation-for="Q2_OctoberDecember" class="text-danger"></span>
                        </div>
                        
                        <!-- Q3: January - March -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Q3_JanuaryMarch" class="form-label fw-bold">January – March (Q3):</label>
                            <input asp-for="Q3_JanuaryMarch" type="number" class="form-control" placeholder="Enter number of clicks" min="0" />
                            <span asp-validation-for="Q3_JanuaryMarch" class="text-danger"></span>
                        </div>
                        
                        <!-- Q4: April - June -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Q4_AprilJune" class="form-label fw-bold">April – June (Q4):</label>
                            <input asp-for="Q4_AprilJune" type="number" class="form-control" placeholder="Enter number of clicks" min="0" />
                            <span asp-validation-for="Q4_AprilJune" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Total Display -->
                    <div class="mt-4 p-3" style="background-color: #f8f9fa; border-radius: 12px;">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 style="color:var(--onejax-navy);">Total Website Clicks (This Entry):</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <h5 style="color:var(--onejax-navy);"><strong>@Model.TotalClicks</strong> clicks</h5>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.GrandTotal != null)
                    {
                        <div class="alert alert-success mt-3" style="border-radius: 12px;">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-0" style="color: #155724;">
                                        <strong>Grand Total Across All Entries:</strong>
                                    </h5>
                                    <small class="text-muted">Based on @ViewBag.TotalEntries entry/entries in the database</small>
                                </div>
                                <div class="col-md-4 text-end">
                                    <h3 class="mb-0" style="color: #155724;">
                                        <strong>@ViewBag.GrandTotal</strong> clicks
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-3"
                                style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px; font-weight: 600;">
                            Submit Website Traffic
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }
</style>