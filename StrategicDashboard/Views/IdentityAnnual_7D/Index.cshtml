@model OneJaxDashboard.Models.Annual_average_7D
@{
    ViewData["Title"] = "Community Perception Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/Identity" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Community Perception Survey</h2>
                </div>
                
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Track biannual community perception survey - Goal: 70% identify OneJax as trusted leader by Q4 2025
                </p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center" style="border-radius: 12px;">
                        @TempData["Success"]
                    </div>
                    
                    @if (ViewBag.ShowNewEntryButton == true)
                    {
                        <div class="text-center mb-4">
                            <a href="/IdentityAnnual_7D/Index" class="btn btn-primary btn-lg"
                               style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px;">
                                Add New Entry
                            </a>
                        </div>
                    }
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center" style="border-radius: 12px;">
                        @TempData["Error"]
                    </div>
                }

                <!-- Input Form -->
                @if (ViewBag.ShowNewEntryButton != true)
                {
                    <form asp-controller="IdentityAnnual_7D" asp-action="Index" method="post">
                        <div class="row">
                            <!-- Year -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Year" class="form-label fw-bold">Year</label>
                                <input asp-for="Year" type="number" class="form-control" 
                                       placeholder="Enter year (e.g., 2025)" min="2020" max="2100" required />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <!-- Percentage -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Percentage" class="form-label fw-bold">
                                    Percentage Identifying OneJax as Trusted Leader (%)
                                </label>
                                <input asp-for="Percentage" type="number" 
                                       step="0.01" class="form-control" 
                                       placeholder="Enter percentage (0-100)" 
                                       min="0" max="100" required />
                                <span asp-validation-for="Percentage" class="text-danger"></span>
                                <small class="form-text text-muted">Goal: 70% or higher</small>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Total Respondents -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalRespondents" class="form-label fw-bold">
                                    Total Respondents (Optional)
                                </label>
                                <input asp-for="TotalRespondents" type="number" class="form-control" 
                                       placeholder="Enter total number of respondents" min="0" />
                                <span asp-validation-for="TotalRespondents" class="text-danger"></span>
                            </div>

                            <!-- Respondents Identifying as Trusted -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="RespondentsIdentifyingAsTrusted" class="form-label fw-bold">
                                    Respondents Identifying as Trusted (Optional)
                                </label>
                                <input asp-for="RespondentsIdentifyingAsTrusted" type="number" class="form-control" 
                                       placeholder="Enter number identifying as trusted" min="0" />
                                <span asp-validation-for="RespondentsIdentifyingAsTrusted" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Notes -->
                            <div class="col-12 mb-3">
                                <label asp-for="Notes" class="form-label fw-bold">Notes (Optional)</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" 
                                          placeholder="Add any additional notes or context about this survey" 
                                          maxlength="500"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                                <small class="form-text text-muted">Maximum 500 characters</small>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-3"
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px; font-weight: 600;">
                                Submit Survey Data
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }

    textarea.form-control {
        resize: vertical;
    }

    .alert h6 {
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .alert h4 {
        font-weight: bold;
    }
</style>
