@model IEnumerable<OneJaxDashboard.Models.Event>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Completed Events";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1" style="color:var(--onejax-navy);">
                    <i class="bi bi-archive-fill me-2"></i>Completed Events
                </h2>
                <p class="text-muted mb-0">View your archived and completed events</p>
            </div>
            <a class="btn btn-outline-secondary" href="/Events">
                <i class="bi bi-arrow-left me-1"></i>Back to Active Events
            </a>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="px-4 py-3 border-0">
                            <i class="bi bi-card-heading me-1"></i>Title
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-target me-1"></i>Strategic Goal
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-lightning me-1"></i>Strategy
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-calendar-check me-1"></i>Completion Date
                        </th>
                        <th class="px-4 py-3 border-0 text-center" style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-archive text-muted d-block mb-3" style="font-size: 3rem;"></i>
                                <p class="text-muted mb-2">No completed events yet.</p>
                                <p class="small text-muted">Once you complete events, they'll appear here.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.OrderByDescending(e => e.CompletionDate))
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <div class="fw-semibold text-dark">@item.Title</div>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <div class="small text-muted text-truncate" style="max-width: 200px;">
                                            @item.Description
                                        </div>
                                    }
                                </td>
                                <td class="py-3">
                                    @if (item.StrategicGoalId.HasValue)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                                            Strategic Goal @item.StrategicGoalId
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Not assigned</span>
                                    }
                                </td>
                                <td class="py-3">
                                    @if (item.StrategyId.HasValue)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2">
                                            Strategy @item.StrategyId
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Not assigned</span>
                                    }
                                </td>
                                <td class="py-3">
                                    @if (item.CompletionDate.HasValue)
                                    {
                                        <span class="text-dark">@item.CompletionDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Events/Edit/@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn-onejax {
            background: linear-gradient(135deg, #1e3a5f 0%, #2c5f7f 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }
        .btn-onejax:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(30, 58, 95, 0.3);
            color: white;
        }
    </style>
}
