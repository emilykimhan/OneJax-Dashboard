@model OneJaxDashboard.Models.Event
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Event";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="mb-3">
            <a href="/Events" class="text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i>Back to Events
            </a>
        </div>
        
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3">
                        <i class="bi bi-calendar-plus-fill text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">Create New Event</h4>
                        <p class="text-muted small mb-0">Add a new event and assign it to strategic goals and strategies</p>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm("Create", "Events", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(m => m.StrategyTemplateId)

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-bookmark-fill me-1"></i>Select Event from Core Strategies
                        </label>
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-collection"></i>
                            </span>
                            <select class="form-select" onchange="window.location.href='/Events/Create?strategyId=' + this.value;" required>
                                <option value="">-- Select an event from Core Strategies --</option>
                                @if (ViewBag.StrategyTemplates != null)
                                {
                                    foreach (SelectListItem item in (SelectList)ViewBag.StrategyTemplates)
                                    {
                                        if (item.Selected)
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <small class="text-muted">This will set the event title and link to strategic goals</small>
                        @Html.ValidationMessageFor(m => m.StrategyTemplateId, "", new { @class = "text-danger small" })
                    </div>

                    @if (Model.StrategyTemplateId > 0)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Selected Event:</strong> @Model.Title
                        </div>
                    }
                    
                    <div class="mb-4">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            <span class="input-group-text align-items-start pt-2">
                                <i class="bi bi-text-paragraph"></i>
                            </span>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4, placeholder = "Describe the event...", @readonly = "readonly" })
                        </div>
                        <small class="text-muted">Description is from the Core Strategy event</small>
                    </div>


                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Status, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-info-circle"></i>
                                </span>
                                @Html.DropDownListFor(m => m.Status, new SelectList(new[] { "Planned", "In Progress", "Completed" }), new { @class = "form-select" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.StartDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.EndDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-check"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 pt-3 border-top">
                        <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold" @(Model.StrategyTemplateId <= 0 ? "disabled" : "")>
                            <i class="bi bi-check-lg me-2"></i>Create Event
                        </button>
                        <a href="/Events" class="btn btn-outline-secondary px-4 py-2">
                            <i class="bi bi-x-lg me-2"></i>Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .bg-light {
            background-color: #f8f9fa !important;
            border: 2px dashed #dee2e6;
        }
        .btn-primary {
            background: linear-gradient(135deg, #1e3a5f 0%, #2c5f7f 100%);
            border: none;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(30, 58, 95, 0.3);
        }
    </style>
}