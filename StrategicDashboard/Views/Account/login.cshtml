@model StrategicDashboard.Models.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-wrapper">
    <div class="card login-card shadow-sm">
        <div class="row g-0">

            
            <aside class="col-md-6 d-none d-md-flex login-brand align-items-center justify-content-center">
                <div class="text-center px-3">
                    <img src="/images/Onejax Logo.png" alt="OneJax Logo" class="mb-3" />
                    <h3 class="headline mb-1">Strategic Dashboard</h3>
                    <p class="small mb-0">Welcome back â€” sign in to continue to your dashboard.</p>
                </div>
            </aside>

           
            <section class="col-12 col-md-6 bg-white d-flex align-items-center">
                <div class="login-form-area w-100">
                    <div class="mx-auto" style="max-width:380px">
                        <div class="text-center mb-3 d-md-none">
                            <img src="/images/Onejax Logo.png" alt="OneJax Logo" style="max-width:100px;" />
                        </div>
                        <h4 class="mb-3 text-center" style="color:var(--onejax-dark-blue); font-weight:700;">Log in</h4>

                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { novalidate = "novalidate" }))
                        {
                            @Html.AntiForgeryToken()

                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <div>@error.ErrorMessage</div>
                                    }
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-person"></i></span>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control border-start-0", placeholder = "Enter your username" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control border-start-0", placeholder = "Enter your password" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                    <label class="form-check-label small" for="RememberMe">Remember Me</label>
                                </div>
                                <a href="/Account/ForgotPassword" class="small">Forgot?</a>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-onejax btn-lg">Sign in</button>
                            </div>

                            <div class="text-center login-footer">
                                <span>Don't have an account?</span>
                                <a href="/Account/Register" class="ms-2">Create one</a>
                            </div>
                        }
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>