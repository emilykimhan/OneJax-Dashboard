@model OneJaxDashboard.Models.StaffSurvey_22D

@{
    ViewData["Title"] = "Delete Staff Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="dashboard-card bg-white">
                <div class="circle-bg"></div>
                <div class="circle-bg2"></div>
                
                <div class="mb-4 text-center">
                    <div class="mb-3">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem; color: var(--onejax-orange);"></i>
                    </div>
                    <h2 class="headline mb-2" style="color: var(--onejax-dark-blue);">Delete Staff Account</h2>
                    <p class="text-muted">Are you sure you want to delete this staff member?</p>
                </div>

                <div class="alert alert-warning border-0" style="background-color: rgba(245, 160, 69, 0.1);">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone.
                </div>

                <div class="card border-0 mb-4" style="background-color: rgba(39, 138, 162, 0.05);">
                    <div class="card-body">
                        <h5 class="card-title mb-3" style="color: var(--onejax-dark-blue);">Staff Details</h5>
                        
                        <div class="row mb-2">
                            <div class="col-4 fw-semibold text-muted">ID:</div>
                            <div class="col-8">@Model.Id</div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-4 fw-semibold text-muted">Username:</div>
                            <div class="col-8"><strong>@Model.Username</strong></div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-4 fw-semibold text-muted">Full Name:</div>
                            <div class="col-8">@Model.Name</div>
                        </div>
                        
                        <div class="row">
                            <div class="col-4 fw-semibold text-muted">Email:</div>
                            <div class="col-8">@Model.Email</div>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm("Delete", "Staff", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="/Staff/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Staff
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .btn-danger {
        background: linear-gradient(90deg, #dc3545, #c82333);
        border: none;
        color: white;
        padding: 0.6rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-danger:hover {
        background: linear-gradient(90deg, #c82333, #bd2130);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        transform: translateY(-2px);
    }
</style>
