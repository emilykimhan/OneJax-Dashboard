@model OneJaxDashboard.Models.StaffSurvey_22D
@{
    ViewData["Title"] = "Edit Staff Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="headline mb-4" style="color:var(--onejax-navy);">Edit Staff Survey</h1>

<div class="container mt-4">
    <div class="card p-4"
        style="background-color:var(--onejax-white); 
               box-shadow:0 4px 24px rgba(0,0,0,0.08); 
               border-radius:24px; 
               max-width:800px;">

        <form asp-action="EditStaffSurvey" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Staff Member Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SatisfactionRate" class="form-label fw-bold">Satisfaction Rate (%)</label>
                <input asp-for="SatisfactionRate" type="number" class="form-control" min="0" max="100" />
                <span asp-validation-for="SatisfactionRate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProfessionalDevelopmentCount" class="form-label fw-bold">Professional Development Count</label>
                <input asp-for="ProfessionalDevelopmentCount" type="number" class="form-control" min="1" />
                <span asp-validation-for="ProfessionalDevelopmentCount" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="RecordHistory" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-label {
        color: var(--onejax-navy);
    }

    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }

    .btn-primary {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
    }

    .btn-primary:hover {
        background-color: #1a365d;
        border-color: #1a365d;
    }
</style>
