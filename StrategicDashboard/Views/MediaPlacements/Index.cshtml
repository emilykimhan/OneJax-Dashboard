@{
    ViewData["Title"] = "Identity / Value Proposition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                <a href="/Identity" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                <h2 class="mb-0" style="color:var(--onejax-navy);">Media Placements</h2>
                </div>
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Achieved a minimum 12 earned media placements by December 2025
                </p>
                
                <!-- Question -->
                <div class="alert alert-info mb-4" style="border-radius: 12px; border-left: 4px solid var(--onejax-navy);">
                    <strong>Question:</strong> How many times was OneJax been mentioned in the media?
                </div>

                <!-- Monthly Input Form -->
                <form>
                    <div class="row">
                        <!-- January -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">January</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- February -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">February</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- March -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">March</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- April -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">April</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- May -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">May</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- June -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">June</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- July -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">July</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- August -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">August</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- September -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">September</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- October -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">October</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- November -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">November</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                        
                        <!-- December -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">December</label>
                            <input type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                        </div>
                    </div>

                    <!-- Total Display -->
                    <div class="mt-4 p-3" style="background-color: #f8f9fa; border-radius: 12px;">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 style="color:var(--onejax-navy);">Total Media Mentions:</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <h5 style="color:var(--onejax-navy);"><strong>0</strong> / 12</h5>
                            </div>
                        </div>
                        <div class="progress mt-2" style="height: 25px; border-radius: 12px;">
                            <div class="progress-bar" role="progressbar" style="width: 0%; background-color: var(--onejax-navy);" aria-valuenow="0" aria-valuemin="0" aria-valuemax="12">
                                0%
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }
</style>
