@model OneJaxDashboard.Models.MediaPlacements_3D
@{
    ViewData["Title"] = "Identity / Value Proposition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                <a href="/Identity" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                <h2 class="mb-0" style="color:var(--onejax-navy);">Media Placements</h2>
                </div>
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Achieved a minimum 12 earned media placements by December 2025
                </p>
                
                <!-- Question -->
                <div class="alert alert-info mb-4" style="border-radius: 12px; border-left: 4px solid var(--onejax-navy);">
                    <strong>Question:</strong> How many times was OneJax been mentioned in the media?
                </div>

                <!-- Grand Total Display -->
                @if (ViewBag.GrandTotal != null)
                {
                    <div class="alert alert-success mb-4" style="border-radius: 12px; background-color: #d4edda; border: 2px solid #28a745;">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-0" style="color: #155724;">
                                    <strong>Total Media Mentions Across All Entries:</strong>
                                </h5>
                                <small class="text-muted">Based on @ViewBag.TotalEntries entry/entries in the database</small>
                            </div>
                            <div class="col-md-4 text-end">
                                <h3 class="mb-0" style="color: #155724;">
                                    <strong>@ViewBag.GrandTotal</strong>
                                </h3>
                            </div>
                        </div>
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                <!-- Monthly Input Form -->
                <form asp-controller="MediaPlacements" asp-action="Index" method="post">
                    <div class="row">
                        <!-- January -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="January" class="form-label fw-bold">January</label>
                            <input asp-for="January" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="January" class="text-danger"></span>
                        </div>
                        
                        <!-- February -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="February" class="form-label fw-bold">February</label>
                            <input asp-for="February" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="February" class="text-danger"></span>
                        </div>
                        
                        <!-- March -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="March" class="form-label fw-bold">March</label>
                            <input asp-for="March" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="March" class="text-danger"></span>
                        </div>
                        
                        <!-- April -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="April" class="form-label fw-bold">April</label>
                            <input asp-for="April" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="April" class="text-danger"></span>
                        </div>
                        
                        <!-- May -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="May" class="form-label fw-bold">May</label>
                            <input asp-for="May" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="May" class="text-danger"></span>
                        </div>
                        
                        <!-- June -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="June" class="form-label fw-bold">June</label>
                            <input asp-for="June" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="June" class="text-danger"></span>
                        </div>
                        
                        <!-- July -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="July" class="form-label fw-bold">July</label>
                            <input asp-for="July" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="July" class="text-danger"></span>
                        </div>
                        
                        <!-- August -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="August" class="form-label fw-bold">August</label>
                            <input asp-for="August" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="August" class="text-danger"></span>
                        </div>
                        
                        <!-- September -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="September" class="form-label fw-bold">September</label>
                            <input asp-for="September" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="September" class="text-danger"></span>
                        </div>
                        
                        <!-- October -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="October" class="form-label fw-bold">October</label>
                            <input asp-for="October" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="October" class="text-danger"></span>
                        </div>
                        
                        <!-- November -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="November" class="form-label fw-bold">November</label>
                            <input asp-for="November" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="November" class="text-danger"></span>
                        </div>
                        
                        <!-- December -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="December" class="form-label fw-bold">December</label>
                            <input asp-for="December" type="number" class="form-control" placeholder="Enter number of mentions" min="0" />
                            <span asp-validation-for="December" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5 py-3"
                                style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px; font-weight: 600;">
                            Submit Media Placements
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }
</style>
