@{
    ViewData["Title"] = "Donor/Honoree Engagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header with back button -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/Financial" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ← Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Donor/Honoree Engagement</h2>
                </div>
                
                <!-- Donor Engagement Form -->
                <div class="survey-form">
                    <h4 class="mb-4 text-center" style="color:var(--onejax-navy);">How Donor/Honoree events were hosted?</h4>
                    <p class="text-center mb-4" style="color:var(--onejax-gray);">
                        Host 3 opportunities for Donor/Honoree engagement annually. Increase engagement by 10% per event.
                    </p>

                    <form>
                        <div class="mb-4">
                            <label class="form-label fw-bold">July – September (Q1):</label>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q1Events" name="q1Events" class="form-control" placeholder="Number of events" min="0" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q1Engagement" name="q1Engagement" class="form-control" placeholder="Engagement increase %" min="0" step="0.1" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">October – December (Q2):</label>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q2Events" name="q2Events" class="form-control" placeholder="Number of events" min="0" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q2Engagement" name="q2Engagement" class="form-control" placeholder="Engagement increase %" min="0" step="0.1" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">January – March (Q3):</label>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q3Events" name="q3Events" class="form-control" placeholder="Number of events" min="0" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q3Engagement" name="q3Engagement" class="form-control" placeholder="Engagement increase %" min="0" step="0.1" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">April – June (Q4):</label>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q4Events" name="q4Events" class="form-control" placeholder="Number of events" min="0" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="number" id="q4Engagement" name="q4Engagement" class="form-control" placeholder="Engagement increase %" min="0" step="0.1" />
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="button" class="btn btn-primary px-4" 
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy);">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-secondary {
        border-color: var(--onejax-navy);
        color: var(--onejax-navy);
    }
    
    .btn-outline-secondary:hover {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
        color: white;
    }
    
    .card {
        border: none;
    }

    /* Survey Form Styles */
    .survey-form {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .form-control:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }

    .btn:hover {
        background-color: #1a365d !important;
        border-color: #1a365d !important;
    }
</style>
