@model IEnumerable<OneJaxDashboard.Models.Event>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var staffCount = ViewData["StaffCount"] as int? ?? 0;
    var eventCount = ViewData["EventCount"] as int? ?? 0;
    var recentActivities = ViewData["RecentActivities"] as List<OneJaxDashboard.Models.ActivityLogEntry> ?? new List<OneJaxDashboard.Models.ActivityLogEntry>();
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="fw-bold" style="color:var(--onejax-navy);">Admin Dashboard</h2>
        <p class="text-muted">Overview and management tools</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-primary bg-opacity-10 border-primary">
            <div class="card-body text-center">
                <h3 class="fw-bold text-primary">@staffCount</h3>
                <p class="mb-0">Total Staff Members</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h3 class="fw-bold text-success">@eventCount</h3>
                <p class="mb-0">Total Events</p>
            </div>
        </div>
    </div>
</div>

<!-- Management Tiles -->
<div class="row mb-4">
    <div class="col-md-4">
        <a href="/Admin/ManageEvents" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-event display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Event Management</h5>
                    <p class="text-muted">Manage and track all events</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/Staff/Index" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Staff Management</h5>
                    <p class="text-muted">Manage staff members</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/Admin/ActivityLog" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-clock-history display-4 text-info mb-3"></i>
                    <h5 class="fw-bold">Activity Log</h5>
                    <p class="text-muted">View all system activities</p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-3 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">Recent Activity</h5>
                <a href="/Admin/ActivityLog" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (recentActivities.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var activity in recentActivities)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <span class="badge bg-secondary me-2">@activity.Username</span>
                                            @activity.Action
                                        </h6>
                                        <small class="text-muted">@(activity.Notes ?? "â€”")</small>
                                    </div>
                                    <small class="text-muted">@activity.Timestamp.ToString("MM/dd/yyyy hh:mm tt")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center mb-0">No recent activities</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
