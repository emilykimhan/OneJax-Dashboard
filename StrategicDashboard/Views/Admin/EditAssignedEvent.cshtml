@model OneJaxDashboard.Models.Event
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Assigned Event";
    var currentStaff = ViewBag.CurrentStaffUsername as string;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="mb-3">
            <a href="/Admin/ManageEvents" class="text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i>Back to Manage Events
            </a>
        </div>
        
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3">
                        <i class="bi bi-pencil-square text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">Edit Assigned Event</h4>
                        <p class="text-muted small mb-0">Update event details and assignment</p>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm("EditAssignedEvent", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.StrategyTemplateId)
                    @Html.HiddenFor(m => m.IsAssignedByAdmin)
                    @Html.HiddenFor(m => m.AssignmentDate)
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-4">
                        <label for="selectedStaffUsername" class="form-label fw-semibold">
                            <i class="bi bi-person-fill me-1"></i>Assign to Staff Member
                        </label>
                        <span class="text-danger">*</span>
                        @Html.DropDownList("selectedStaffUsername", ViewBag.StaffMembers as SelectList, 
                            "Select a staff member...", new { @class = "form-select", @required = "required" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.Title, new { @class = "form-label fw-semibold" })
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-card-heading"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter event title" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                    </div>
                    
                    <div class="mb-4">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            <span class="input-group-text align-items-start pt-2">
                                <i class="bi bi-text-paragraph"></i>
                            </span>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "4", placeholder = "Describe the event objectives and requirements..." })
                        </div>
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.StrategicGoalId, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-bullseye"></i>
                                </span>
                                @Html.DropDownListFor(m => m.StrategicGoalId, ViewBag.StrategicGoals as SelectList, 
                                    "Select strategic goal...", new { @class = "form-select", @id = "strategicGoalSelect" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.StrategyId, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-flag-fill"></i>
                                </span>
                                @Html.DropDownListFor(m => m.StrategyId, ViewBag.Strategies as SelectList, 
                                    "Select strategy...", new { @class = "form-select", @id = "strategySelect" })
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.StartDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.DueDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-check"></i>
                                </span>
                                @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Status, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-info-circle"></i>
                                </span>
                                @Html.DropDownListFor(m => m.Status, new SelectList(new[] { "Planned", "In Progress", "Completed" }, Model.Status), new { @class = "form-select" })
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.AdminNotes, new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            <span class="input-group-text align-items-start pt-2">
                                <i class="bi bi-sticky"></i>
                            </span>
                            @Html.TextAreaFor(m => m.AdminNotes, new { @class = "form-control", @rows = "3", placeholder = "Add any notes or special instructions for the staff member..." })
                        </div>
                    </div>

                    @if (Model.AssignmentDate.HasValue)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Assignment Info:</strong> Originally assigned on @Model.AssignmentDate.Value.ToString("MMMM dd, yyyy")
                        </div>
                    }

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-check-lg me-1"></i>Update Assignment
                        </button>
                        <a href="/Admin/ManageEvents" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>