@model OneJaxDashboard.Models.Event
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Assign Event to Staff";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="mb-3">
            <a href="/Admin/ManageEvents" class="text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i>Back to Manage Events
            </a>
        </div>
        
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-2 me-3">
                        <i class="bi bi-calendar-plus-fill text-success" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">Assign Event to Staff Member</h4>
                        <p class="text-muted small mb-0">Create and assign a new event to a staff member</p>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm("AssignEvent", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(m => m.StrategyTemplateId)

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-bookmark-fill me-1"></i>Select an Event
                        </label>
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-collection"></i>
                            </span>
                            <select class="form-select" onchange="window.location.href='/Admin/AssignEvent?strategyId=' + this.value;" required>
                                <option value="">-- Select an event from Core Strategies --</option>
                                @if (ViewBag.StrategyTemplates != null)
                                {
                                    foreach (SelectListItem item in (SelectList)ViewBag.StrategyTemplates)
                                    {
                                        if (item.Selected)
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <small class="text-muted">This will set the event title and link to strategic goals</small>
                        @Html.ValidationMessageFor(m => m.StrategyTemplateId, "", new { @class = "text-danger small" })
                    </div>

                    @if (Model.StrategyTemplateId > 0)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Selected Event:</strong> @Model.Title
                        </div>
                    }

                    <div class="mb-4">
                        <label for="selectedStaffUsername" class="form-label fw-semibold">
                            <i class="bi bi-person-fill me-1"></i>Assign to Staff Member
                        </label>
                        <span class="text-danger">*</span>
                        @Html.DropDownList("selectedStaffUsername", ViewBag.StaffMembers as SelectList, 
                            "Select a staff member...", new { @class = "form-select", @required = "required" })
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.StartDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @type = "date" })
                            </div>
                            @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.DueDate, new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-check"></i>
                                </span>
                                @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.AdminNotes, new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            <span class="input-group-text align-items-start pt-2">
                                <i class="bi bi-sticky"></i>
                            </span>
                            @Html.TextAreaFor(m => m.AdminNotes, new { @class = "form-control", @rows = "3", placeholder = "Add any notes or special instructions for the staff member...", id = "adminNotes" })
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-success flex-grow-1" @(Model.StrategyTemplateId <= 0 ? "disabled" : "")>
                            <i class="bi bi-check-lg me-1"></i>Assign Event
                        </button>
                        <a href="/Admin/ManageEvents" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .bg-light {
        background-color: #f8f9fa !important;
        border: 2px dashed #dee2e6;
    }
</style>

