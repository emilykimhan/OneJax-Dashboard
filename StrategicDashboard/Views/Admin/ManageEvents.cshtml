@model IEnumerable<OneJaxDashboard.Models.Event>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Events";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1" style="color:var(--onejax-navy);">
                    <i class="bi bi-kanban me-2"></i>Manage Events
                </h2>
                <p class="text-muted mb-0">Oversee all active events and assignments</p>
            </div>
            <div>
                <a class="btn btn-outline-info me-2" href="/Admin/ArchivedEvents">
                    <i class="bi bi-archive me-1"></i>Archived Events
                </a>
                <a class="btn btn-onejax me-2" href="/Admin/AssignEvent">
                    <i class="bi bi-plus-lg me-1"></i>Assign New Event
                </a>
                <a class="btn btn-outline-secondary" href="/Admin/Index">
                    <i class="bi bi-arrow-left me-1"></i>Back to Admin
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary bg-opacity-10 border-primary">
            <div class="card-body text-center">
                <h3 class="fw-bold text-primary">@Model.Count()</h3>
                <p class="mb-0">Total Events</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h3 class="fw-bold text-success">@Model.Count(e => e.IsAssignedByAdmin)</h3>
                <p class="mb-0">Admin Assigned</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info bg-opacity-10 border-info">
            <div class="card-body text-center">
                <h3 class="fw-bold text-info">@Model.Count(e => !e.IsAssignedByAdmin)</h3>
                <p class="mb-0">Staff Created</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="px-4 py-3 border-0">
                            <i class="bi bi-card-heading me-1"></i>Event Title
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-person me-1"></i>Assigned To
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-flag me-1"></i>Strategy
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-info-circle me-1"></i>Status
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-calendar-event me-1"></i>Due Date
                        </th>
                        <th class="py-3 border-0">
                            <i class="bi bi-shield-check me-1"></i>Source
                        </th>
                        <th class="px-4 py-3 border-0 text-center" style="width:200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="bi bi-calendar-x text-muted d-block mb-3" style="font-size: 3rem;"></i>
                                <p class="text-muted mb-2">No events found.</p>
                                <a href="/Admin/AssignEvent" class="btn btn-onejax">
                                    <i class="bi bi-plus-lg me-1"></i>Assign First Event
                                </a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var eventItem in Model)
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <div>
                                        <div class="fw-semibold">@eventItem.Title</div>
                                        @if (!string.IsNullOrEmpty(eventItem.Description))
                                        {
                                            <small class="text-muted">@(eventItem.Description.Length > 50 ? eventItem.Description.Substring(0, 50) + "..." : eventItem.Description)</small>
                                        }
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-2">
                                            <i class="bi bi-person-fill text-primary"></i>
                                        </div>
                                        <span class="fw-medium">@eventItem.OwnerUsername</span>
                                    </div>
                                </td>
                                <td class="py-3">
                                    @if (eventItem.StrategyId.HasValue)
                                    {
                                        <span class="badge bg-info bg-opacity-75">Strategy #@eventItem.StrategyId</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No strategy</span>
                                    }
                                </td>
                                <td class="py-3">
                                    @{
                                        var statusClass = eventItem.Status switch
                                        {
                                            "Completed" => "success",
                                            "In Progress" => "warning",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@eventItem.Status</span>
                                </td>
                                <td class="py-3">
                                    @if (eventItem.DueDate.HasValue)
                                    {
                                        <span class="text-nowrap">@eventItem.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                        @if (eventItem.DueDate.Value < DateTime.Now)
                                        {
                                            <br><small class="text-danger">Overdue</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No due date</span>
                                    }
                                </td>
                                <td class="py-3">
                                    @if (eventItem.IsAssignedByAdmin)
                                    {
                                        <span class="badge bg-success bg-opacity-75">
                                            <i class="bi bi-shield-check me-1"></i>Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info bg-opacity-75">
                                            <i class="bi bi-person me-1"></i>Staff
                                        </span>
                                    }
                                </td>
                                <td class="px-4 py-3">
                                    <div class="d-flex gap-1 justify-content-center">
                                        @if (eventItem.IsAssignedByAdmin)
                                        {
                                            <a href="/Admin/EditAssignedEvent/@eventItem.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Edit Assignment">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="btn btn-sm btn-outline-secondary disabled" title="Staff-created event">
                                                <i class="bi bi-eye"></i>
                                            </span>
                                        }
                                        
                                        <form method="post" action="/Admin/DeleteAssignedEvent/@eventItem.Id" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this event?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="btn btn-sm btn-outline-danger" 
                                                    title="Delete Event">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>