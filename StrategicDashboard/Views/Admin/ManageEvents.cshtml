@model IEnumerable<OneJaxDashboard.Models.Event>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Events";
    var activeEvents = ViewData["ActiveEvents"] as List<OneJaxDashboard.Models.Event> ?? new List<OneJaxDashboard.Models.Event>();
    var completedEvents = ViewData["CompletedEvents"] as List<OneJaxDashboard.Models.Event> ?? new List<OneJaxDashboard.Models.Event>();
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1" style="color:var(--onejax-navy);">Event Management</h2>
                <p class="text-muted mb-0">Manage all active and completed events</p>
            </div>
            <div>
                <a class="btn btn-onejax me-2" href="/Admin/AssignEvent">
                    <i class="bi bi-plus-circle me-2"></i>Assign New Event
                </a>
                <a class="btn btn-outline-secondary" href="/Admin/Index">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Summary -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary bg-opacity-10 border-primary">
            <div class="card-body text-center">
                <h3 class="fw-bold text-primary">@(activeEvents.Count + completedEvents.Count)</h3>
                <p class="mb-0">Total Events</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body text-center">
                <h3 class="fw-bold text-warning">@activeEvents.Count</h3>
                <p class="mb-0">Active Events</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h3 class="fw-bold text-success">@completedEvents.Count</h3>
                <p class="mb-0">Completed Events</p>
            </div>
        </div>
    </div>
</div>

<!-- Active Events Section -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-white border-0 pt-3">
        <h5 class="fw-bold mb-0">
            <i class="bi bi-calendar-check text-warning me-2"></i>Active Events
        </h5>
    </div>
    <div class="card-body p-0">
        @if (activeEvents.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">Event</th>
                            <th>Status</th>
                            <th>Assigned To</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eventItem in activeEvents)
                        {
                            <tr>
                                <td class="py-3">
                                    <div>
                                        <div class="fw-medium">@eventItem.Title</div>
                                        @if (!string.IsNullOrEmpty(eventItem.Description))
                                        {
                                            <small class="text-muted">@eventItem.Description</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@eventItem.Status</span>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-2">
                                            <i class="bi bi-person-fill text-primary"></i>
                                        </div>
                                        <span class="fw-medium">@(eventItem.AssignedStaff?.Name ?? eventItem.OwnerUsername)</span>
                                    </div>
                                </td>
                                <td>
                                    @if (eventItem.DueDate.HasValue)
                                    {
                                        <span>@eventItem.DueDate.Value.ToString("MM/dd/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/EditAssignedEvent/@eventItem.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="DeleteAssignedEvent" asp-route-id="@eventItem.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <p class="text-muted mt-3">No active events</p>
            </div>
        }
    </div>
</div>

<!-- Completed Events Section -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pt-3">
        <h5 class="fw-bold mb-0">
            <i class="bi bi-check-circle text-success me-2"></i>Completed Events
        </h5>
    </div>
    <div class="card-body p-0">
        @if (completedEvents.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">Event</th>
                            <th>Status</th>
                            <th>Assigned To</th>
                            <th>Completed Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eventItem in completedEvents)
                        {
                            <tr>
                                <td class="py-3">
                                    <div>
                                        <div class="fw-medium">@eventItem.Title</div>
                                        @if (!string.IsNullOrEmpty(eventItem.Description))
                                        {
                                            <small class="text-muted">@eventItem.Description</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success">@eventItem.Status</span>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-2">
                                            <i class="bi bi-person-fill text-primary"></i>
                                        </div>
                                        <span class="fw-medium">@(eventItem.AssignedStaff?.Name ?? eventItem.OwnerUsername)</span>
                                    </div>
                                </td>
                                <td>
                                    @if (eventItem.CompletionDate.HasValue)
                                    {
                                        <span>@eventItem.CompletionDate.Value.ToString("MM/dd/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/EditAssignedEvent/@eventItem.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="DeleteAssignedEvent" asp-route-id="@eventItem.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-check-circle display-1 text-muted"></i>
                <p class="text-muted mt-3">No completed events yet</p>
            </div>
        }
    </div>
</div>