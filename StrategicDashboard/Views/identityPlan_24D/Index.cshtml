@model OneJaxDashboard.Models.Plan2026_24D
@{
    ViewData["Title"] = "Framework Development Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/Identity" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Framework Development Plan</h2>
                </div>
                
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Develop and roll out the framework by Q1 FY 26-27
                </p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center" style="border-radius: 12px;">
                        @TempData["Success"]
                    </div>
                    
                    @if (ViewBag.ShowNewEntryButton == true)
                    {
                        <div class="text-center mb-4">
                            <a href="/identityPlan_24D/Index" class="btn btn-primary btn-lg"
                               style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px;">
                                Add New Entry
                            </a>
                        </div>
                    }
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center" style="border-radius: 12px;">
                        @TempData["Error"]
                    </div>
                }

                <!-- Input Form -->
                @if (ViewBag.ShowNewEntryButton != true)
                {
                    <form asp-controller="identityPlan_24D" asp-action="Index" method="post">
                        <div class="row">
                            <!-- Name -->
                            <div class="col-12 mb-3">
                                <label asp-for="Name" class="form-label fw-bold">Name</label>
                                <input asp-for="Name" type="text" class="form-control" 
                                       placeholder="Enter name" 
                                       maxlength="200" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Year -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Year" class="form-label fw-bold">Year</label>
                                <input asp-for="Year" type="number" class="form-control" 
                                       placeholder="Enter year (e.g., 2026)" min="2020" max="2100" required />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <!-- Quarter -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quarter" class="form-label fw-bold">Quarter</label>
                                <select asp-for="Quarter" class="form-select" required>
                                    <option value="">-- Select Quarter --</option>
                                    <option value="Q1">Q1</option>
                                    <option value="Q2">Q2</option>
                                    <option value="Q3">Q3</option>
                                    <option value="Q4">Q4</option>
                                </select>
                                <span asp-validation-for="Quarter" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Framework Status -->
                            <div class="col-12 mb-3">
                                <label asp-for="FrameworkStatus" class="form-label fw-bold">Framework Status</label>
                                <input asp-for="FrameworkStatus" type="text" class="form-control" 
                                       placeholder="Enter status (e.g., In Development, Testing, Rolled Out)" 
                                       maxlength="100" required />
                                <span asp-validation-for="FrameworkStatus" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Notes -->
                            <div class="col-12 mb-3">
                                <label asp-for="Notes" class="form-label fw-bold">Notes (Optional)</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" 
                                          placeholder="Add any additional notes or context" 
                                          maxlength="500"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                                <small class="form-text text-muted">Maximum 500 characters</small>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Goal Met Checkbox -->
                            <div class="col-12 mb-3">
                                <div class="form-check">
                                    <input asp-for="GoalMet" type="checkbox" class="form-check-input" id="goalMetCheck" />
                                    <label asp-for="GoalMet" class="form-check-label fw-bold" for="goalMetCheck">
                                        Framework developed and rolled out by Q1 FY 26-27
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-3"
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px; font-weight: 600;">
                                Submit Framework Data
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }

    textarea.form-control {
        resize: vertical;
    }

    .form-select {
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: var(--onejax-navy);
        border-color: var(--onejax-navy);
    }

    .form-check-input:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
</style>
