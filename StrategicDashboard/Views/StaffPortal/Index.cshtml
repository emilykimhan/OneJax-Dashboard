@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Dashboard";
    var eventCount = ViewData["EventCount"] as int? ?? 0;
    var completedCount = ViewData["CompletedCount"] as int? ?? 0;
    var inProgressCount = ViewData["InProgressCount"] as int? ?? 0;
    var recentActivities = ViewData["RecentActivities"] as List<OneJaxDashboard.Models.ActivityLogEntry> ?? new List<OneJaxDashboard.Models.ActivityLogEntry>();
}

@{
    var fullName = (ViewData["FullName"] as string) ?? string.Empty;
    var displayName = string.IsNullOrWhiteSpace(fullName) ? (User.Identity?.Name ?? "") : fullName;
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="fw-bold" style="color:var(--onejax-navy);">Staff Dashboard</h2>
        <p class="text-muted">Welcome back, @displayName</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary bg-opacity-10 border-primary">
            <div class="card-body text-center">
                <h3 class="fw-bold text-primary">@eventCount</h3>
                <p class="mb-0">Total Events</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body text-center">
                <h3 class="fw-bold text-warning">@inProgressCount</h3>
                <p class="mb-0">In Progress</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body text-center">
                <h3 class="fw-bold text-success">@completedCount</h3>
                <p class="mb-0">Completed Events</p>
            </div>
        </div>
    </div>
</div>

<!-- Management Tiles -->
<div class="row mb-4">
    <div class="col-md-4">
        <a href="/Events" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-event display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">My Events</h5>
                    <p class="text-muted">View and manage your events</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/Events/Create" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-plus-circle display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Create Event</h5>
                    <p class="text-muted">Add a new strategic event</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/StaffPortal/Profile" class="text-decoration-none">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-circle display-4 text-info mb-3"></i>
                    <h5 class="fw-bold">My Profile</h5>
                    <p class="text-muted">Update your information</p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-3 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">Recent Activity</h5>
                @if (recentActivities.Any())
                {
                    <span class="badge bg-primary">@recentActivities.Count recent</span>
                }
            </div>
            <div class="card-body">
                @if (recentActivities.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var activity in recentActivities)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <span class="badge bg-secondary me-2">@activity.Username</span>
                                            @activity.Action
                                        </h6>
                                        <small class="text-muted">@(activity.Notes ?? "â€”")</small>
                                    </div>
                                    <small class="text-muted">@activity.Timestamp.ToString("MM/dd/yyyy hh:mm tt")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center mb-0">No recent activities</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
