@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Dashboard";
    var projectCount = ViewData["ProjectCount"] as int? ?? 0;
    var activities = ViewData["RecentActivities"] as IEnumerable<StrategicDashboard.Models.ActivityLogEntry> ?? Enumerable.Empty<StrategicDashboard.Models.ActivityLogEntry>();
}

@{
    var fullName = (ViewData["FullName"] as string) ?? string.Empty;
    var email = (ViewData["Email"] as string) ?? string.Empty;
    var displayName = string.IsNullOrWhiteSpace(fullName) ? (User.Identity?.Name ?? "") : fullName;
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="fw-bold" style="color:var(--onejax-navy);">
            <i class="bi bi-speedometer2 me-2"></i>Welcome, @displayName
        </h2>
        @if (!string.IsNullOrWhiteSpace(email))
        {
            <p class="text-muted mb-1"><i class="bi bi-envelope me-1"></i>@email</p>
        }
        <p class="text-muted">Manage your projects and track your activity</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="bi bi-folder-fill text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">My Projects</h5>
                        <p class="text-muted small mb-0">Total projects</p>
                    </div>
                </div>
                <p class="display-4 fw-bold mb-3" style="color:var(--onejax-navy);">@projectCount</p>
                <div class="mt-auto">
                    <a href="/Projects" class="btn btn-onejax w-100">
                        <i class="bi bi-arrow-right-circle me-1"></i>View Projects
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="bi bi-person-circle text-success" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">My Profile</h5>
                        <p class="text-muted small mb-0">Personal information</p>
                    </div>
                </div>
                <p class="text-muted mb-3">Edit your contact info and preferences</p>
                <div class="mt-auto">
                    <a href="/StaffPortal/Profile" class="btn btn-outline-primary w-100">
                        <i class="bi bi-pencil-square me-1"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                        <i class="bi bi-plus-circle-fill text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Quick Actions</h5>
                        <p class="text-muted small mb-0">Get started</p>
                    </div>
                </div>
                <p class="text-muted mb-3">Create a new project or event</p>
                <div class="mt-auto">
                    <a href="/Projects/Create" class="btn btn-warning w-100 text-dark">
                        <i class="bi bi-plus-lg me-1"></i>New Project
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clock-history me-2 text-primary" style="font-size: 1.25rem;"></i>
                    <h5 class="mb-0 fw-bold">Recent Activity</h5>
                </div>
            </div>
            <div class="card-body">
                @if (!activities.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3 mb-0">No recent activity yet.</p>
                        <p class="text-muted small">Your actions will appear here</p>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var a in activities)
                        {
                            <div class="list-group-item border-0 border-bottom px-0">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            @if (a.Action.Contains("Created"))
                                            {
                                                <i class="bi bi-plus-circle-fill text-success me-2"></i>
                                            }
                                            else if (a.Action.Contains("Updated") || a.Action.Contains("Edited"))
                                            {
                                                <i class="bi bi-pencil-fill text-primary me-2"></i>
                                            }
                                            else if (a.Action.Contains("Deleted"))
                                            {
                                                <i class="bi bi-trash-fill text-danger me-2"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-circle-fill text-secondary me-2" style="font-size: 0.5rem;"></i>
                                            }
                                            <strong class="mb-0">@a.Action</strong>
                                        </div>
                                        @if (!string.IsNullOrEmpty(a.Notes))
                                        {
                                            <p class="text-muted small mb-0 ms-4">@a.Notes</p>
                                        }
                                    </div>
                                    <small class="text-muted ms-3">
                                        <i class="bi bi-clock me-1"></i>@a.Timestamp.ToLocalTime().ToString("g")
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
