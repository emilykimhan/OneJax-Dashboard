@model OneJaxDashboard.Models.ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-3">
            <a href="/StaffPortal/Profile" class="text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i>Back to Profile
            </a>
        </div>
        
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-2 me-3">
                        <i class="bi bi-shield-lock text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">Change Password</h4>
                        <p class="text-muted small mb-0">Update your login password</p>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["SuccessMessage"]
                    </div>
                }
                
                @using (Html.BeginForm("ChangePassword", "StaffPortal", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Password requirements:</strong> Minimum 6 characters
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label fw-semibold" })
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key"></i>
                            </span>
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Enter current password" })
                        </div>
                        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-label fw-semibold" })
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter new password" })
                        </div>
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-semibold" })
                        <span class="text-danger">*</span>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-check2-circle"></i>
                            </span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm new password" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="bi bi-shield-check me-1"></i>Change Password
                        </button>
                        <a href="/StaffPortal/Profile" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
