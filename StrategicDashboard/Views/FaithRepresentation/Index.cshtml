@model OneJaxDashboard.Models.FaithRepres_13D
@{
    ViewData["Title"] = "Faith Representation at Community Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4"
                 style="background-color:var(--onejax-white);
                        box-shadow:0 4px 24px rgba(0,0,0,0.08);
                        border-radius:24px;">
                
                <!-- Header -->
                <div class="d-flex align-items-center mb-4">
                    <a href="/CommunityEngagement" 
                       class="btn btn-outline-secondary me-3"
                       style="border-radius: 8px;">
                        ‚Üê Back
                    </a>
                    <h2 class="mb-0" style="color:var(--onejax-navy);">Faith Representation</h2>
                </div>
                <p class="text-center mb-4" style="color:var(--onejax-gray);">
                    Ensure 3 faiths represented at 80% of community events
                </p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Success"]
                    </div>
                    
                    @if (ViewBag.ShowNewEntryButton == true)
                    {
                        <div class="text-center mb-4">
                            <a href="/FaithRepresentation/Index" class="btn btn-primary"
                               style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 8px;">
                                Enter Another Event
                            </a>
                        </div>
                    }
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                @if (ViewBag.ShowNewEntryButton != true)
                {

                    <!-- Data Entry Form -->
                    <form asp-controller="FaithRepresentation" asp-action="Index" method="post">
                        <div class="mb-3">
                            <label asp-for="StrategyId" class="form-label fw-bold">
                                <i class="bi bi-calendar-event"></i> Select Event
                            </label>
                            <select asp-for="StrategyId" class="form-select" asp-items="ViewBag.Strategies" required>
                                <option value="">-- Select an Event --</option>
                            </select>
                            <span asp-validation-for="StrategyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfFaiths" class="form-label fw-bold">
                                <i class="bi bi-people"></i> Number of Faiths Represented
                            </label>
                            <input asp-for="NumberOfFaiths" type="number" class="form-control" 
                                   placeholder="Enter number of faiths" min="0" required />
                            <span asp-validation-for="NumberOfFaiths" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FaithNames" class="form-label fw-bold">
                                <i class="bi bi-tags"></i> Faith Names
                            </label>
                            <textarea asp-for="FaithNames" class="form-control" rows="3" 
                                      placeholder="Enter faith names (e.g., Christianity, Islam, Judaism, Buddhism)" 
                                      maxlength="500" required></textarea>
                            <small class="text-muted">Separate multiple faiths with commas</small>
                            <span asp-validation-for="FaithNames" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5 py-3"
                                    style="background-color:var(--onejax-navy); border-color:var(--onejax-navy); border-radius: 12px; font-weight: 600;">
                                <i class="bi bi-check-circle"></i> Submit Faith Representation
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus, .form-select:focus {
        border-color: var(--onejax-navy);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 191, 0.25);
    }
    
    .form-label {
        color: var(--onejax-navy);
        margin-bottom: 0.5rem;
    }
    
    .card {
        border: none;
    }
    
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
    }

    .bi {
        margin-right: 5px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
