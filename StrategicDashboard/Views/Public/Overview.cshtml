@model List<OneJaxDashboard.Models.StrategicGoal>
@{
    ViewData["Title"] = "Public Goals Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --onejax-orange: #f5a045;
        --onejax-blue: #4bb4c8;
        --onejax-gold: #bfa871;
        --onejax-dark-blue: #278aa2;
        --onejax-green: #67ab8c;
        --onejax-navy: #096682;
        --onejax-dark-green: #005f47;
        --onejax-white: #ffffff;
        --onejax-light-bg: #faf9f7;
        --onejax-border: #e6e1db;
        --onejax-text: #2d2d2d;
        --onejax-text-muted: #6b6b6b;
    }
    
    .public-header {
        background: linear-gradient(135deg, var(--onejax-navy), var(--onejax-dark-blue));
        color: white;
        padding: 4rem 0;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }
    
    .public-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        opacity: 0.3;
    }
    
    .goal-card {
        background: var(--onejax-white);
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid var(--onejax-border);
        overflow: hidden;
        margin-bottom: 2rem;
        height: 100%;
    }
    
    .goal-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }
    
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .status-planned {
        background: #fef3c7;
        color: #92400e;
    }
    
    .status-active {
        background: #d1fae5;
        color: #065f46;
    }
    
    .status-completed {
        background: #dbeafe;
        color: #1e40af;
    }
    
    .progress-ring {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: white;
        font-size: 1.1rem;
    }
    
    .metric-mini {
        background: var(--onejax-light-bg);
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        margin: 0.5rem 0;
    }
    
    .view-details-btn {
        background: linear-gradient(135deg, var(--onejax-blue), var(--onejax-navy));
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }
    
    .view-details-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        color: white;
        text-decoration: none;
    }
    
    .summary-stats {
        background: var(--onejax-white);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
</style>

<div class="public-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 mb-3" style="font-weight: 700;">OneJax Strategic Goals</h1>
                <p class="lead mb-0">Public overview of our organizational progress and strategic initiatives</p>
            </div>
            <div class="col-md-4 text-end">
                <img src="~/Images/OneJax Logo.png" alt="OneJax Logo" style="height: 80px; filter: drop-shadow(0 2px 8px rgba(0,0,0,0.3)); opacity: 0.95;">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Summary Statistics -->
    <div class="summary-stats">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="h2 text-primary mb-2">@Model.Count</div>
                <div class="text-muted">Strategic Goals</div>
            </div>
            <div class="col-md-3">
                <div class="h2 text-success mb-2">@Model.SelectMany(g => g.Events).Count(e => e.Status == "Active")</div>
                <div class="text-muted">Active Events</div>
            </div>
            <div class="col-md-3">
                <div class="h2 text-info mb-2">@Model.SelectMany(g => g.Events).Count(e => e.Status == "Completed")</div>
                <div class="text-muted">Completed</div>
            </div>
            <div class="col-md-3">
                <div class="h2 text-warning mb-2">@Model.SelectMany(g => g.Events).Count(e => e.Status == "Planned")</div>
                <div class="text-muted">Planned</div>
            </div>
        </div>
    </div>

    <!-- Project Cards -->
    <div class="row">
        @{ 
            var onejaxColors = new[] { 
                "linear-gradient(135deg, #096682, #278aa2)", // navy to dark-blue
                "linear-gradient(135deg, #f5a045, #bfa871)", // orange to gold  
                "linear-gradient(135deg, #4bb4c8, #67ab8c)", // blue to green
                "linear-gradient(135deg, #67ab8c, #005f47)"  // green to dark-green
            };
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            var goal = Model[i];
            var cardColor = onejaxColors[i % onejaxColors.Length];
            
            // Calculate overall progress from metrics
            var overallProgress = goal.Metrics?.Any() == true ? 
                goal.Metrics.Average(m => (double)m.CurrentValue / (double.TryParse(m.Target, out double target) ? target : 1) * 100) : 0;
            
            // Determine goal status based on multiple factors
            string goalStatus = "In Planning";
            string statusClass = "status-planned";
            
            if (goal.Metrics?.Any() == true && goal.Events?.Any() == true)
            {
                // Goal has both metrics and events
                var activeEvents = goal.Events.Count(e => e.Status == "Active");
                var completedEvents = goal.Events.Count(e => e.Status == "Completed");
                var totalEvents = goal.Events.Count();
                
                if (overallProgress >= 90)
                {
                    goalStatus = "Nearly Complete";
                    statusClass = "status-completed";
                }
                else if (overallProgress >= 70 || (activeEvents > 0 && completedEvents > 0))
                {
                    goalStatus = "On Track";
                    statusClass = "status-active";
                }
                else if (activeEvents > 0 || overallProgress > 25)
                {
                    goalStatus = "In Progress";
                    statusClass = "status-active";
                }
            }
            else if (goal.Events?.Any() == true)
            {
                // Goal has events but no metrics
                var activeEvents = goal.Events.Count(e => e.Status == "Active");
                var completedEvents = goal.Events.Count(e => e.Status == "Completed");
                
                if (activeEvents > 0)
                {
                    goalStatus = "In Progress";
                    statusClass = "status-active";
                }
                else if (completedEvents > 0)
                {
                    goalStatus = "Activities Complete";
                    statusClass = "status-completed";
                }
            }
            else if (goal.Metrics?.Any() == true)
            {
                // Goal has metrics but no events
                if (overallProgress >= 80)
                {
                    goalStatus = "Target Reached";
                    statusClass = "status-completed";
                }
                else if (overallProgress > 40)
                {
                    goalStatus = "Making Progress";
                    statusClass = "status-active";
                }
            }

            <div class="col-lg-6 mb-4">
                <div class="goal-card">
                    <!-- Goal Header -->
                    <div class="p-4" style="background: @cardColor; color: white; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="mb-2" style="font-weight: 600;">@goal.Name</h4>
                                <p class="mb-3" style="opacity: 0.9;">@goal.Description</p>
                                <span class="status-badge @statusClass"
                                      style="background: rgba(255,255,255,0.2); color: white;">
                                    @goalStatus
                                </span>
                            </div>
                            <div class="progress-ring" style="background: rgba(255,255,255,0.2);">
                                @Math.Round(overallProgress, 0)%
                            </div>
                        </div>
                    </div>

                    <!-- Project Content -->
                    <div class="p-4">
                        <!-- Key Metrics -->
                        @if (goal.Metrics?.Any() == true)
                        {
                            <h6 class="mb-3" style="color: var(--onejax-navy); font-weight: 600;">Key Metrics</h6>
                            <div class="row">
                                @foreach (var metric in goal.Metrics.Take(2))
                                {
                                    <div class="col-6">
                                        <div class="metric-mini">
                                            <div class="h5 mb-1" style="color: var(--onejax-navy);">@metric.CurrentValue @metric.Unit</div>
                                            <div class="small text-muted">@metric.Name</div>
                                            <div class="small" style="color: var(--onejax-text-muted);">Target: @metric.Target @metric.Unit</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Recent Activities -->
                        @if (goal.Events?.Any() == true)
                        {
                            <h6 class="mb-3 mt-4" style="color: var(--onejax-navy); font-weight: 600;">Recent Activities</h6>
                            <div class="list-group list-group-flush">
                                @foreach (var eventItem in goal.Events.OrderByDescending(e => e.DueDate).Take(3))
                                {
                                    <div class="list-group-item border-0 px-0 py-2" style="background: transparent;">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-semibold" style="color: var(--onejax-text);">@eventItem.Title</div>
                                                <small class="text-muted">@eventItem.DueDate?.ToString("MMM dd, yyyy") â€¢ @eventItem.Type</small>
                                            </div>
                                            <span class="badge @(eventItem.Status.ToLower() == "active" ? "bg-success" : eventItem.Status.ToLower() == "completed" ? "bg-primary" : "bg-warning")">
                                                @eventItem.Status
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- View Details Button -->
                        <div class="mt-4 text-center">
                            <a href="@Url.Action("Project", "Public", new { id = goal.Id })" class="view-details-btn">
                                View Full Project Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Call to Action -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="text-center p-5" style="background: linear-gradient(135deg, var(--onejax-light-bg), var(--onejax-white)); border-radius: 16px;">
                <h3 style="color: var(--onejax-navy); margin-bottom: 1rem;">Get Involved</h3>
                <p style="color: var(--onejax-text-muted); font-size: 1.1rem; margin-bottom: 2rem;">
                    Learn more about OneJax initiatives and how you can support our community work.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="mailto:info@onejax.org" class="btn btn-primary btn-lg" style="border-radius: 12px;">
                        Contact Us
                    </a>
                    <a href="/" class="btn btn-outline-primary btn-lg" style="border-radius: 12px;">
                        View Full Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin-bottom: 3rem;"></div>
